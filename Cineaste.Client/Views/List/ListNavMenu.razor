@inherits CineasteComponent
@using MudBlazor

<MudNavMenu Bordered="true">
    <MudNavLink Href="@this.PageNavigator.ListPage(this.Handle)" Match="NavLinkMatch.All"
                Icon="@Icons.Material.Filled.List">
        @this.Loc["ListPage.Menu.List"]
    </MudNavLink>
    <MudNavLink Href="@this.PageNavigator.ListSettingsPage(this.Handle)" Match="NavLinkMatch.All" Disabled="true"
                Icon="@Icons.Material.Filled.Settings">
        @this.Loc["ListPage.Menu.Settings"]
    </MudNavLink>
    <MudNavLink Href="@this.PageNavigator.HomePage()" Match="NavLinkMatch.All"
                Icon="@Icons.Material.Filled.Home">
        @this.Loc["ListPage.Menu.Back"]
    </MudNavLink>
</MudNavMenu>

@code {
    [Parameter]
    public string Handle { get; set; } = String.Empty;

    [Parameter]
    public bool IsListLoaded { get; set; }
}
