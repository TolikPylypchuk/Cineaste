@inherits StatefulComponent<SeriesFormState>

@switch (this.State.Value.SelectedSeriesComponent)
{
    case SeasonModel model:
        <SeasonForm Model="@model" Close="@this.Close" />
        break;
    default:
        <SeriesMainForm ListId="@this.ListId" ListItem="@this.ListItem" Close="@this.Close" />
        break;
}

@code {
    [Parameter]
    public Guid ListId { get; set; }

    [Parameter]
    public ListItemModel? ListItem { get; set; }

    [Parameter]
    public EventCallback Close { get; set; }
}
