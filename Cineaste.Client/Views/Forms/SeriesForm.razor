@inherits StatefulComponent<SeriesFormState>

@switch (this.State.Value.SelectedSeriesComponent)
{
    case SeasonFormModel model:
        <SeasonForm Season="@model.BackingModel" FormModel="@model" Close="@this.Close"
                    Delete="@(() => this.RemoveComponent(model))" />
        break;
    default:
        <SeriesMainForm FormTitle="@this.FormTitle" FormTitleUpdated="@this.UpdateFormTitle" FormModel="@this.FormModel"
                        ListId="@this.ListId" ListItem="@this.ListItem" Save="@this.Save" Cancel="@this.Cancel"
                        Close="@this.Close" />
        break;
}
