<local:RangeFilterInputControlBase x:Class="Cineaste.Views.Filters.RangeFilterInputControl"
                                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                   xmlns:local="clr-namespace:Cineaste.Views.Filters"
                                   xmlns:v="clr-namespace:Cineaste.Views">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <v:NumberTextBox x:Name="RangeStartBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Grid.Column="0" v:Properties.TripleClickSelectAll="True" Margin="0 0 2 0" />

        <v:NumberTextBox x:Name="RangeEndBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                         Grid.Column="1" v:Properties.TripleClickSelectAll="True" Margin="2 0 0 0" />
    </Grid>
</local:RangeFilterInputControlBase>
