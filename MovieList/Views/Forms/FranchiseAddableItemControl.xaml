<local:FranchiseAddableItemControlBase x:Class="Cineaste.Views.Forms.FranchiseAddableItemControl"
                                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                         xmlns:local="clr-namespace:Cineaste.Views.Forms">
    <StackPanel>
        <TextBlock x:Name="TitleTextBlock" TextWrapping="Wrap" Style="{StaticResource MaterialDesignBody2TextBlock}" />

        <WrapPanel>
            <TextBlock x:Name="OriginalTitleTextBlock" TextWrapping="Wrap"
                       Style="{StaticResource MaterialDesignOverlineTextBlock}" />

            <TextBlock x:Name="YearTextBlock" TextWrapping="Wrap"
                       Style="{StaticResource MaterialDesignOverlineTextBlock}" />

            <TextBlock x:Name="TagTextBlock" TextWrapping="Wrap"
                       Style="{StaticResource MaterialDesignOverlineTextBlock}" />
        </WrapPanel>
    </StackPanel>
</local:FranchiseAddableItemControlBase>
