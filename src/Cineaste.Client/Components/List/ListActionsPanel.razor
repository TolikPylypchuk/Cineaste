@inherits CineasteComponent

<div class="container">
    <MudButton
        Color="Color.Primary"
        Variant="Variant.Filled"
        Size="Size.Large"
        Class="add"
        @onclick="@this.AddMovie"
    >
        @this.Loc["ListActionsPanel.AddMovie"]
    </MudButton>

    <MudButton
        Color="Color.Primary"
        Variant="Variant.Filled"
        Size="Size.Large"
        Class="add"
        @onclick="@this.AddSeries"
    >
        @this.Loc["ListActionsPanel.AddSeries"]
    </MudButton>
</div>

@code {
    private void AddMovie() =>
        this.Dispatcher.Dispatch(new StartAddingMovieAction());

    private void AddSeries() =>
        this.Dispatcher.Dispatch(new StartAddingSeriesAction());
}
