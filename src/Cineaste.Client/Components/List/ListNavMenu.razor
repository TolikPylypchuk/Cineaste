@inherits CineasteComponent

<div class="container">
    <div>
        <h3 class="title">
            @this.Loc["ListNavMenu.Title"]
        </h3>

        <MudNavMenu Bordered="true">
            <MudNavLink
                Href="@this.PageNavigator.GetPageUrl(CineastePage.List)"
                Match="NavLinkMatch.All"
                Icon="@Icons.Material.Filled.List"
            >
                @this.Loc["ListNavMenu.List"]
            </MudNavLink>

            <MudNavLink
                Href="@this.PageNavigator.GetPageUrl(CineastePage.ListSettings)"
                Match="NavLinkMatch.All"
                Icon="@Icons.Material.Filled.Settings"
                Disabled="true"
            >
                @this.Loc["ListNavMenu.Settings"]
            </MudNavLink>
        </MudNavMenu>
    </div>

    <div class="menu-container">
        <MudNavMenu Bordered="true">
            <MudNavLink
                Href="@this.PageNavigator.GetPageUrl(CineastePage.Profile)"
                Match="NavLinkMatch.All"
                Icon="@Icons.Material.Filled.Person"
                Disabled="true"
            >
                @this.Loc["ListNavMenu.Profile"]
            </MudNavLink>

            <form action="identity/logout" method="post">
                <button type="submit" class="mud-nav-link mud-ripple">
                    <MudIcon Icon="@Icons.Material.Filled.Logout"></MudIcon>
                    @this.Loc["ListNavMenu.LogOut"]
                </button>
            </form>
        </MudNavMenu>
    </div>
</div>
