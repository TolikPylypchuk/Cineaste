<CascadingValue Name="@CascadingParameters.ValidationExecutor" Value="@this.For" IsFixed="true">
    <CascadingValue Name="@CascadingParameters.ErrorCodes" Value="@this.For.ValidationErrors">
        @this.ChildContent
    </CascadingValue>
</CascadingValue>

@code {
    [Parameter]
    public required ValidatableComponent For { get; set; }

    [Parameter]
    public required RenderFragment ChildContent { get; set; }
}
