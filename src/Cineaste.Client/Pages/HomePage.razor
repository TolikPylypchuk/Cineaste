@page "/"
@rendermode @(new InteractiveWebAssemblyRenderMode(prerender: false))
@inherits CineasteComponent

<AuthorizeView>
    <Authorized>
        <div class="container">
            <h1 class="title">@this.Loc["Cineaste"]</h1>

            <MudButton
                Href="@this.PageNavigator.ListPage"
                Color="Color.Primary"
                Variant="Variant.Filled"
                Size="Size.Large"
            >
                @this.Loc["HomePage.GoToList"]
            </MudButton>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="container">
            <h1 class="title">@this.Loc["Cineaste"]</h1>

            <MudButton
                Href="@this.PageNavigator.LoginPage"
                Color="Color.Primary"
                Variant="Variant.Filled"
                Size="Size.Large"
            >
                Log in
            </MudButton>
        </div>
    </NotAuthorized>
</AuthorizeView>
