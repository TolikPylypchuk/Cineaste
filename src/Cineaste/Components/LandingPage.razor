@page "/"
@using Cineaste.Client.Navigation
@attribute [ExcludeFromInteractiveRouting]

@inject IStringLocalizer<Resources> Loc
@inject IPageNavigator PageNavigator

<AuthorizeView>
    <Authorized>
        <RedirectToList />
    </Authorized>
    <NotAuthorized>
        <div class="container">
            <h1 class="title">@this.Loc["LandingPage.Title"]</h1>

            <div class="actions">
                <MudButton
                    Href="@this.PageNavigator.GetPageUrl(CineastePage.Login)"
                    Color="Color.Primary"
                    Variant="Variant.Filled"
                    Size="Size.Large"
                >
                    @this.Loc["LandingPage.LogIn"]
                </MudButton>

                <MudButton
                    Href="@this.PageNavigator.GetPageUrl(CineastePage.Register)"
                    Color="Color.Primary"
                    Variant="Variant.Text"
                    Size="Size.Large"
                >
                    @this.Loc["LandingPage.Register"]
                </MudButton>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>
