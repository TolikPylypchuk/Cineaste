@page "/"
@attribute [ExcludeFromInteractiveRouting]

@inject IStringLocalizer<Resources> Loc
@inject IPageNavigator PageNavigator

<AuthorizeView>
    <Authorized>
        <RedirectToList />
    </Authorized>
    <NotAuthorized>
        <div class="container">
            <h1 class="title">@this.Loc["Cineaste"]</h1>

            <MudButton
                Href="@this.PageNavigator.GetPageUrl(CineastePage.Login)"
                Color="Color.Primary"
                Variant="Variant.Filled"
                Size="Size.Large"
            >
                Log in
            </MudButton>
        </div>
    </NotAuthorized>
</AuthorizeView>
