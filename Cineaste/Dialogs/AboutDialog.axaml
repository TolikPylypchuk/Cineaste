<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:l="using:Cineaste.Localization"
             xmlns:dm="using:Cineaste.Core.DialogModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
             x:Class="Cineaste.Dialogs.AboutDialog">
    <Design.DataContext>
        <dm:AboutModel />
    </Design.DataContext>

    <StackPanel>
        <TextBlock x:Name="AboutTextBlock" Margin="16" />

        <DockPanel Margin="16 0 16 16">
            <ui:HyperlinkButton x:Name="DocsButton" DockPanel.Dock="Left" Content="{l:Translate ViewDocumentation}" />

            <ui:Button x:Name="OKButton" DockPanel.Dock="Right" HorizontalAlignment="Right" IsDefault="True"
                       Classes="accent" Content="{l:Translate OK}" />
        </DockPanel>
    </StackPanel>
</UserControl>
