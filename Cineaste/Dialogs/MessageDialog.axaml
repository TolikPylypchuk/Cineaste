<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:dm="using:Cineaste.Core.DialogModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
             x:Class="Cineaste.Dialogs.MessageDialog">
    <Design.DataContext>
        <dm:MessageModel />
    </Design.DataContext>

    <StackPanel Margin="8">
        <TextBlock x:Name="MessageTextBlock" Margin="0 8 0 0" />
        <ui:Button x:Name="CloseButton" Margin="0 16 0 0" IsDefault="True" Classes="accent"
                   HorizontalAlignment="Right" />
    </StackPanel>
</UserControl>
