<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dm="using:Cineaste.Core.DialogModels"
             mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
             x:Class="Cineaste.Dialogs.MessageDialog">
    <Design.DataContext>
        <dm:MessageModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto" Margin="8">
        <TextBlock x:Name="MessageTextBlock" Grid.Row="0" Margin="0 8 0 0" />
        <Button x:Name="CloseButton" Grid.Row="1" Margin="0 16 0 0" HorizontalAlignment="Right"
                IsDefault="True" Classes="accent" />
    </Grid>
</UserControl>
