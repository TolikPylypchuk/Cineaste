<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="using:FluentAvalonia.Styling"
             xmlns:local="using:Cineaste"
             x:Class="Cineaste.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/FluentIcons.axaml" />
                <ResourceInclude Source="/Resources/Resources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme Mode="Light" />
        <ui:FluentAvaloniaTheme />

        <StyleInclude Source="/Styles/Styles.axaml" />
    </Application.Styles>
</Application>
