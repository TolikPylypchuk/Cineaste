<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="using:Projektanker.Icons.Avalonia"
             xmlns:c="using:Cineaste.Controls"
             xmlns:vm="using:Cineaste.Core.ViewModels.Forms.Preferences"
             mc:Ignorable="d" d:DesignWidth="64" d:DesignHeight="32"
             x:Class="Cineaste.Views.Forms.Preferences.TagItemControl">
    <Design.DataContext>
        <vm:TagItemViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto,*,Auto" Margin="0 4 4 4">
        <Border CornerRadius="16" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                Grid.ColumnSpan="3" />

        <Border x:Name="ColorTagBorder" VerticalAlignment="Center" Height="32" Width="32">
            <Border.Clip>
                <EllipseGeometry RadiusX="16" RadiusY="16" Center="16,16" />
            </Border.Clip>
        </Border>

        <TextBlock x:Name="TextBlock" Grid.Column="1" VerticalAlignment="Center" Margin="8 0 12 0" />

        <Button x:Name="DeleteButton" Grid.Column="2" Margin="0 0 4 0"
                Classes="icon" VerticalAlignment="Center" Width="20" Height="20"
                i:Attached.Icon="far fa-times-circle" />
    </Grid>
</UserControl>
