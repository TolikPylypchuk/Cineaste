<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:i="using:Projektanker.Icons.Avalonia"
             xmlns:l="using:Cineaste.Localization"
             xmlns:vm="using:Cineaste.Core.ViewModels.Forms"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="50"
             x:Class="Cineaste.Views.Forms.TitleFormControl">
    <Design.DataContext>
        <vm:TitleFormViewModel />
    </Design.DataContext>

    <DockPanel>
        <Button x:Name="DeleteButton" DockPanel.Dock="Right" VerticalAlignment="Center" Width="20" Height="20"
                Margin="8 0 0 0" Classes="icon" i:Attached.Icon="fas fa-times" />

        <StackPanel>
            <TextBlock x:Name="CaptionTextBlock" Classes="caption" />
            <TextBox x:Name="NameTextBox" TextWrapping="Wrap" />
            <TextBlock x:Name="ErrorTextBlock" Classes="error caption" />
        </StackPanel>
    </DockPanel>
</UserControl>
