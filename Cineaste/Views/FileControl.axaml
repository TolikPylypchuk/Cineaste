<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:rx="http://reactiveui.net"
             xmlns:c="using:Cineaste.Controls"
             xmlns:l="using:Cineaste.Localization"
             xmlns:vm="using:Cineaste.Core.ViewModels"
             xmlns:vmp="using:Cineaste.Core.ViewModels.Forms.Preferences"
             mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="750"
             x:Class="Cineaste.Views.FileControl">
    <Design.DataContext>
        <vm:FileViewModel />
    </Design.DataContext>

    <ui:NavigationView x:Name="Navigation" IsBackEnabled="False" IsBackButtonVisible="False" AlwaysShowHeader="True">
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem x:Name="ListItem" Content="{l:Translate NavigationList}" Icon="List" />
        </ui:NavigationView.MenuItems>

        <rx:ViewModelViewHost x:Name="Host" />
    </ui:NavigationView>
</UserControl>
