<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cineaste.Views.RecentFileControl">
    <Border x:Name="Border" Padding="8" BorderThickness="0 0 0 1" Cursor="Hand"
            BorderBrush="{DynamicResource DividerStrokeColorDefaultBrush}">
        <Grid ColumnDefinitions="Auto,*">
            <CheckBox x:Name="IsSelectedCheckBox" VerticalAlignment="Center" />

            <StackPanel Margin="8 0 0 0" Grid.Column="1">
                <TextBlock x:Name="ListNameTextBlock" FontSize="18" />
                <TextBlock x:Name="ListPathTextBlock" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
